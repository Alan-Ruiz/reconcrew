
<%= simple_form_for [@location, @booking], html: {
                                              data: {
                                                controller: 'flatpickr',
                                                flatpickr_enable: @available_dates,
                                                flatpickr_url: location_availabilities_path(@location),
                                                flatpickr_min_date: Time.zone.tomorrow,
                                                flatpickr_price: @location.price.to_i
                                              }
                                            } do |f| %>

  <%= f.input :dates, as: :string,
                           label: "Dates",
                           placeholder: "From",
                           wrapper_html: { class: "inline_field_wrapper calendar", id:"date-selec" },
                           input_html: { class: "booking-input",
                            data: {
                              target: 'flatpickr.instance'
                            }
                           } %>

            <div class="payment-dets">
              <div class="payment-title">
              <p class="payment-dets border-bottom">Payment Details</p>
              </div>
              <div id="tot-price-days">
                <p><span id='location-price'><%= @location.price%></span> x <span class='total-price-days'>0</span> day(s)</p>
                <p class="tp-container" ><span class="tp">TOTAL PRICE</span><span class="price-container" ><span id='total-price'>0</span>â‚¬</span></p>
              </div>
            </div>

  <%= f.submit "Book", class: "btn-booking btn btn-primary btn-lg btn-block btn-danger date-button disable",
                       disabled: true,
                       data: { target: 'flatpickr.button'} %>

<% end %>
